@model SchoolJournal.Models.SearchPupil

@{
    ViewData["Title"] = "Школьный журнал";
}

<h1>Поиск</h1>
<h4>Ученика</h4>
<form asp-action="Search" asp-controller="SearchPupil" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="SearchText">Введите строку для поиска</label>
            <input type="text" asp-for="SearchText" />
            <span asp-validation-for="SearchText" />
            <input type="submit" value="Искать" class="btn btn-outline-dark" />
        </div>
        @if(Model != null && Model.Pupils != null)
        {
            @await Html.PartialAsync("_Pupils", @Model.Pupils);
        }
    </div>
</form>


